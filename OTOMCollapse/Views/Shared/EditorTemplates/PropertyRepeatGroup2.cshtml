<section>
    <div class="nestedRepeatGroupContainer">
        @{
            for (int m = 0; m < Model.PropertyDetailsQuestions.Properties[0].Location.Count; m++)
        {
            <div id="nestedTabHeader_@m" class="tabHeader">
                <div id="tabHeaderSelector_@m" class="tabHeaderSelector"></div>
                @Html.Raw("Location " + (m + 1))
            </div>
        }
        <div id="locationTabAdd" class="tabAdd">+</div>

            for (int m = 0; m < Model.PropertyDetailsQuestions.Properties[0].Location.Count; m++)
            {
                <div id="nestedTabBody_@m" class="tabBody">
                    @Html.LabelFor(model => model.PropertyDetailsQuestions.Properties[0].Location)
                    @Html.DropDownListFor(model => model.PropertyDetailsQuestions.Properties[0].PropertyLocationId[m], new List<SelectListItem>() { new SelectListItem() { Text = "Avais", Value = "1" } }));@*// ViewData["PropertyLocations"] as IEnumerable<SelectListItem>)*@
                </div>
            }

        }
    </div>
</section>

